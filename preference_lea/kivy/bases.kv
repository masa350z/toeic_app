<Home>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.9, 0.9
        pos: [root.width/2 - self.width/2, root.height/2  - self.height/2]
        spacing: 25

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .3
            Label:
                text: 'Lea'
                font_size: 48
                size_hint_x: .2
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    Label:
                        text: '最大取引量：'
                    Label:
                        id: am
                        text: root.am
                BoxLayout:
                    Label:
                        text: '利用期限：'
                    Label:
                        id: ex
                        text: root.ex
            Button:
                text: '更新'
                size_hint_x: .3
                on_press: am.text, ex.text = root.refresh()

        GridLayout:
            cols: 2
            rows: 2
            spacing: [20,20]
            Button:
                text: '取引所設定'
                on_press: app.root.go_selectexchange()
            Button:
                text: 'トレード設定'
                on_press: app.root.go_setting()
            Button:
                text: '継続コード入力'
                on_press: app.root.go_continue()
            Button:
                text: '紹介プログラム'
                on_press: app.root.go_affiliate()

<Information>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: .7, .8
        pos: [root.width/2 - self.width/2, root.height/2  - self.height/5*2]
        Label:
            text: 'ご注意'
            font_size: 20
            size_hint_y: .1
        Label:
            text: '初回起動です。以下の記述をお読みいただくようお願いします。これは今回のみ表示されます。'
            size_hint_x: 1.0
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 4
            Label:
                text: root.message
                size_hint_x: 1.0
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]

    Button:
        size_hint_x: .5
        size_hint_y: .1
        pos: [root.width/2 - self.width/2, self.height/2]
        text: '次へ'
        on_press: root.go_termofuse()

<TermOfUse>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: .7, .8
        pos: [root.width/2 - self.width/2, root.height/2  - self.height/5*2]
        Label:
            text: '利用規約'
            font_size: 20
            size_hint_y: .1
        Label:
            text: '初回起動です。以下の記述をお読みいただくようお願いします。これは今回のみ表示されます。'
            size_hint_x: 1.0
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 4
            Label:
                text: root.term_of_use
                size_hint_x: 1.0
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]

    Button:
        size_hint_x: .5
        size_hint_y: .1
        pos: [root.width/2 - self.width/2, self.height/2]
        text: '同意して次へ'
        on_press: root.register_ini() ;app.root.go_selectexchange()