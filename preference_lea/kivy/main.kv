MainRoot:

<MainRoot>:
    Label:
        text: 'Lea'
        font_size: 100
        pos: [root.width/2 - self.width/2, root.height/2 - self.height/2]

    TextInput:
        id: passtext
        focus: True
        multiline: False
        password: True
        hint_text: '起動パスワードを入力してEnterしてください'
        size_hint_x: 0.5
        size_hint_y: 0.1
        pos: [root.width/2 - self.width/2, self.height*1/2]
        on_text_validate: app.root.password = self.text; app.root.auth_password()

<wrongpass>:
    Label:
        text: 'パスワードが正しくありません'
        pos: [root.width/2 - self.width/2, root.height/2 - self.height/2]

    TextInput:
        id: passtext
        multiline: False
        password: True
        hint_text: '起動パスワードを入力してEnterしてください'
        size_hint_x: 0.5
        size_hint_y: 0.1
        pos: [root.width/2 - self.width/2, self.height*1/2]
        on_text_validate: app.root.password = self.text; app.root.auth_password()